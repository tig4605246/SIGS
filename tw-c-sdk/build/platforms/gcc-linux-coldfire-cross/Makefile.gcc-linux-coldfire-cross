# C SDK Example Platform Make file

# Set up your compiler and link options here
TOOLROOT = $(TW_SDK_ROOT)/../TOOLS/gcc-linux-coldfire-cross
TOOL_PREFIX = m68k-linux-gnu-
CCDIR = ${TOOLROOT}/bin
LIBDIR = ${TOOLROOT}/lib
INCDIR = ${TOOLROOT}/include

export LD_LIBRARY_PATH=$(TOOLROOT)/lib/gcc
OS_INCLUDE		= "twLinux.h"

CC              = ${CCDIR}/$(TOOL_PREFIX)gcc
CC_OPTS         = -DTW_OS_INCLUDE='$(OS_INCLUDE)' -mcpu=54455 -march=isac -msoft-float -Wall -D_GNU_SOURCE -D_FILE_OFFSET_BITS=64 -D_LINUX -DCPU_COLDFIRE \
				  -DCC_GNU -DBIG_ENDIAN_CPU -DARCH_IS_BIG_ENDIAN=1 -DTW_HINTS=AF_INET $(SDK_CONFIG) \
                  -pthread -fPIC -ffunction-sections -fdata-sections -fmessage-length=0 -fcommon  
LINKER          = $(CC)
LIBOPTS         = -pthread -fPIC -Wl,--gc-sections -L${CROSS_LIBDIR} -march=isac -msoft-float -mcpu=54455 
STATIC_LIBS     =
AR              = ${CCDIR}/$(TOOL_PREFIX)ar cru 
RANLIB          = ${CCDIR}/$(TOOL_PREFIX)ranlib

# OS FILES
OS_INC_DIR   = 
OS_SRCS      = $(TW_SDK_ROOT)/src/porting/twLinux.c $(TW_SDK_ROOT)/src/porting/twPThreads.c
OS_DEFS      =
OS_LIBS      =
OS_LIB_DIR   =
